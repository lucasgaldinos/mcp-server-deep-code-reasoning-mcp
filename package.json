{
	"name": "mcp-server-deep-code-reasoning-mcp",
	"version": "0.1.0",
	"description": "Deep Code Reasoning MCP Server - Specialized analysis tool for complex codebases",
	"main": "dist/src/index.js",
	"type": "module",
	"scripts": {
		"clean": "rm -rf dist",
		"build": "npm run clean && npx tsc -p config/build/tsconfig.json && npx tsc-alias -p config/build/tsconfig.json && npx tsx scripts/build/fix-imports.ts",
		"build:check": "npm run build && npx tsx scripts/development/validate-structure.ts",
		"dev:fix-imports": "npx tsx scripts/development/fix-imports.ts",
		"dev": "tsx --watch src/index.ts",
		"start": "node dist/src/index.js",
		"test": "vitest --config config/build/vitest.config.ts",
		"test:unit": "vitest run --config config/build/vitest.config.ts --reporter=verbose -t 'Mock Tests|Unit Tests'",
		"test:integration": "TEST_WITH_REAL_API=true vitest run --config config/build/vitest.config.ts --reporter=verbose -t 'Real API|Integration Tests'",
		"test:hybrid": "vitest run --config config/build/vitest.config.ts --reporter=verbose src/__tests__/gemini-service-hybrid.test.ts",
		"test:all": "npm run test:unit && npm run test:integration",
		"test:watch": "vitest --config config/build/vitest.config.ts",
		"test:coverage": "vitest run --config config/build/vitest.config.ts --coverage",
		"test:ui": "vitest --config config/build/vitest.config.ts --ui",
		"benchmark": "vitest run --config config/build/vitest.config.ts --reporter=verbose -t 'benchmark'",
		"lint": "eslint src --ext .ts --config config/quality/.eslintrc.cjs",
		"enforce:typescript": "tsx scripts/development/enforce-typescript-sources.ts",
		"lint:fix": "eslint src --ext .ts --fix --config config/quality/.eslintrc.cjs",
		"format": "prettier --write . --config config/quality/.prettierrc.json",
		"format:check": "prettier --check . --config config/quality/.prettierrc.json",
		"typecheck": "tsc --noEmit --project config/build/tsconfig.json",
		"quality:check": "npm run typecheck && npm run lint && npm run format:check && npm run test",
		"quality:fix": "npm run lint:fix && npm run format",
		"quality:full": "npm run quality:fix && npm run typecheck && npm run test",
		"quality:enforce": "tsx scripts/development/quality-gates.ts full",
		"quality:validate": "tsx scripts/development/simple-quality-validation.ts",
		"quality:gates": "tsx scripts/development/quality-gates.ts",
		"pre-commit": "npm run quality:enforce",
		"validate-structure": "tsx scripts/development/validate-structure.ts",
		"security-audit": "tsx scripts/security/run-security-audit.ts",
		"performance-analysis": "tsx scripts/performance/run-performance-analysis.ts",
		"prepare": "husky",
		"docker:build": "tsx scripts/deployment/docker-build.ts",
		"docker:local": "tsx scripts/deployment/deploy.ts local",
		"deploy:staging": "tsx scripts/deployment/deploy.ts staging",
		"deploy:production": "tsx scripts/deployment/deploy.ts production"
	},
	"keywords": [
		"mcp",
		"code-analysis",
		"reasoning",
		"claude",
		"gemini",
		"ai",
		"debugging"
	],
	"author": "Jonathan Haas",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lucasgaldinos/mcp-server-deep-code-reasoning-mcp.git"
	},
	"bugs": {
		"url": "https://github.com/lucasgaldinos/mcp-server-deep-code-reasoning-mcp/issues"
	},
	"homepage": "https://github.com/lucasgaldinos/mcp-server-deep-code-reasoning-mcp#readme",
	"dependencies": {
		"@google/generative-ai": "^0.24.1",
		"@modelcontextprotocol/sdk": "^1.12.3",
		"@types/node": "^20.0.0",
		"@types/node-cache": "^4.1.3",
		"@types/uuid": "^10.0.0",
		"dotenv": "^16.3.1",
		"node-cache": "^5.1.2",
		"uuid": "^11.1.0",
		"zod": "^3.22.0"
	},
	"devDependencies": {
		"@types/jest": "^29.5.0",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
		"@typescript-eslint/parser": "^6.21.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"esbuild": "^0.25.9",
		"eslint": "^8.57.1",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-jsdoc": "^57.0.8",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-security": "^3.0.1",
		"husky": "^9.1.7",
		"jest": "^29.5.0",
		"lint-staged": "^16.1.6",
		"markdownlint-cli": "^0.45.0",
		"prettier": "^3.6.2",
		"ts-jest": "^29.1.0",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.0.0",
		"typescript": "^5.0.0",
		"vitest": "^3.2.4"
	}
}
