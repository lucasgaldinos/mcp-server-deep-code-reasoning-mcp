{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "ES2022"
    ],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@analyzers/*": [
        "./analyzers/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@errors/*": [
        "./errors/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "examples/**/*",
    "tests/**/*",
    "test-scenario/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}